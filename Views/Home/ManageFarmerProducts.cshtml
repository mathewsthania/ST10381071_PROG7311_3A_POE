@model IEnumerable<ST10381071_PROG7311_3A_POE.Models.Product>

@{
    ViewData["Title"] = "Manage My Products";
}

<div class="manageFarmer-container">
    <div class="top-bar">
        <h2>Manage My Products</h2>
        <a asp-controller="Home" asp-action="AddProduct" asp-route-userId="@ViewBag.FarmerUserId" class="btn btn-success">Add New Product</a>
    </div>

    <hr class="section-divider" />

    <table class="farmer-table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate</td>
                        <td>R @product.Price</td>
                        <td>
                            <a href="@Url.Action("EditProduct", "Home", new { id = product.ProductID })" class="btn btn-edit">Edit</a>
                            <a href="@Url.Action("DeleteProduct", "Home", new { id = product.ProductID })" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="no-farmers">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* background colour*/
    body {
        background-image: url('/css/COW_BACKGROUND.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: 'Century Gothic', sans-serif;
        color: white;
        margin: 0;
        padding-top: 120px;
    }

    .manageFarmer-container {
        max-width: 1200px;
        margin: 100px auto;
        padding: 30px;
        background-color: rgba(33, 80, 37, 0.7); /* Green with 70% opacity */
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

    .farmer-table {
        width: 100%;
        border-collapse: collapse;
        background-color: rgba(255, 255, 255, 0.02); /* Slight transparent table body */
    }

        .farmer-table th {
            background-color: #154c2c; /* Darker green */
            color: white;
            padding: 12px;
            font-size: 16px;
        }

        .farmer-table td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            background-color: rgba(255, 255, 255, 0.03); /* Light transparent rows */
            color: white;
        }

            .farmer-table td a {
                margin-right: 10px;
            }

    .no-farmers {
        text-align: center;
        font-size: 18px;
        font-family: 'Century Gothic', sans-serif;
        padding: 20px 0;
    }

    h2 {
        font-family: 'Century Gothic', sans-serif;
        font-weight: bolder;
        font-size: 45px;
    }

    th {
        font-family: 'Century Gothic', sans-serif;
        font-weight: bolder;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-top: 10px;
    }

    .btn {
        font-family: 'Century Gothic', sans-serif; /* Targeting all buttons for Century Gothic font */
        padding: 8px 14px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-addFarmer {
        background-color: yellow;
        color: black;
    }

        .btn-addFarmer:hover {
            background-color: black;
            color: white;
        }

    .btn-edit {
        background-color: yellow;
        color: black;
    }

        .btn-edit:hover {
            background-color: black;
            color: yellow;
        }

    .btn-delete {
        background-color: black;
        color: white;
    }

        .btn-delete:hover {
            background-color: red;
            color: white;
        }

    .section-divider {
        border: none;
        border-top: 2px solid #ffffff; /* visible white line */
        margin: 10px 0 30px 0;
        width: 100%;
    }
</style>