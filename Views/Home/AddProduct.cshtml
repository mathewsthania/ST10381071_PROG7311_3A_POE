<form asp-controller="Product" asp-action="AddProduct" method="post" class="add-product-form">
    <h2>Add New Product</h2>

    <label for="Name">Product Name</label>
    <input type="text" name="Name" required />

    <label for="Category">Category</label>
    <input type="text" name="Category" required />

    <label for="ProductionDate">Production Date</label>
    <input type="date" name="ProductionDate" required />

    <label for="Price">Price</label>
    <input type="number" step="0.01" name="Price" required />

    <!-- Hidden field to carry FarmerUserID (e.g. from session) -->
    <input type="hidden" name="FarmerUserID" value="@Model.FarmerUserID" />

    <button type="submit">Add Product</button>
</form>