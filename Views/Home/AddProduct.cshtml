@model ST10381071_PROG7311_3A_POE.Models.Product

<form asp-controller="Home" asp-action="AddProduct" method="post" class="add-product-form">
    <div class="form-header">
        <h2>Add New Product</h2>
    </div>

    <label for="Name">Product Name</label>
    <input type="text" name="Name" required />

    <label for="Category">Category</label>
    <input type="text" name="Category" required />

    <label for="ProductionDate">Production Date</label>
    <input type="date" name="ProductionDate" required />

    <label for="Price">Price (R)</label>
    <input type="number" step="0.01" name="Price" required />

    <input type="hidden" name="FarmerUserID" value="@Model.FarmerUserID" />

    <button type="submit">Add Product</button>
</form>

<style>
    body {
        padding-top: 120px;
        background-image: url('/images/farm-background.jpg'); /* Optional: replace with your image path */
        background-size: cover;
        background-position: center;
        font-family: 'Century Gothic', sans-serif;
        color: white;
    }

    .add-product-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: rgba(33, 80, 37, 0.75); /* Transparent green */
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

    .form-header {
        text-align: center;
        margin-bottom: 25px;
    }

    .add-product-form label {
        display: block;
        margin-bottom: 6px;
        font-weight: bold;
        color: #fff;
    }

    .add-product-form input,
    .add-product-form button {
        width: 100%;
        margin-bottom: 20px;
        padding: 12px;
        border-radius: 6px;
        border: none;
        font-size: 16px;
    }

    .add-product-form input {
        background-color: #e8f5e9;
        color: #000;
    }

    .add-product-form button {
        background-color: yellow;
        color: black;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .add-product-form button:hover {
            background-color: black;
            color: yellow;
        }
</style>