@model ST10381071_PROG7311_3A_POE.Models.Product

<div class="editFarmer-background"></div>

<div class="editFarmer-overlay">
    <form asp-action="EditProduct" method="post" class="editFarmer-form">
        <h2>Edit Product Details</h2>
        <p class="editFarmer-message">Update your product information below 🛠️</p>

        @* Hidden fields *@
        <input asp-for="ProductID" type="hidden" />
        <input asp-for="FarmerUserID" type="hidden" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="ProductionDate"></label>
            <input asp-for="ProductionDate" class="form-control" type="date" required />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        </div>

        <button type="submit" class="updateFarmer-btn">Update Product</button>
    </form>
</div>

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Century Gothic', sans-serif;
    }

    .editFarmer-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-image: url('/css/SIGNUP_BACKGROUND.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        z-index: -999;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .editFarmer-overlay {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .editFarmer-form {
        background-color: rgba(34, 85, 34, 0.9);
        padding: 40px;
        border-radius: 15px;
        max-width: 500px;
        width: 90%;
        color: white;
        text-align: center;
    }

        .editFarmer-form h2 {
            margin-bottom: 25px;
            font-weight: bold;
            font-size: 32px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: none;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
        position: relative;
    }

    label {
        font-family: 'Century Gothic', sans-serif;
        text-align: left;
        display: block;
        margin-bottom: 5px;
    }

    .editFarmer-message {
        font-size: 14px;
        margin-bottom: 25px;
        color: white;
        font-style: italic;
    }

    .updateFarmer-btn {
        background-color: white;
        color: #333;
        padding: 10px;
        margin-top: 15px;
        border: none;
        font-family: 'Century Gothic', sans-serif;
        font-weight: bold;
        width: 100%;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .updateFarmer-btn:hover {
            background-color: yellow;
            color: black;
        }
</style>