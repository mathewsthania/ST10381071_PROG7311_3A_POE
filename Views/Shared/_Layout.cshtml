@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10381071_PROG7311_3A_POE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10381071_PROG7311_3A_POE.styles.css" asp-append-version="true" />
    <style>
        /* adding in navigation bar design */
        .custom-navbar {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            background: transparent; /* transparent dark overlay */
            z-index: 10;
        }

        .navbar-nav .nav-item {
            position: relative;
            padding: 0 15px;
        }
            /* adding in line spaces between each navigation item - for a simple design*/
            .navbar-nav .nav-item:not(:last-child)::after {
                content: "|";
                position: absolute;
                right: -10px;
                top: 50%;
                transform: translateY(-50%);
                color: lightgray;
                font-size: 20px;
                font-weight: bold;
            }

            /* adding in design - font and colour for the navigation items*/
            .navbar-nav .nav-item .nav-link {
                font-family: 'Century Gothic', sans-serif;
                font-size: 16px;
                font-weight: bold;
                color: white;
                padding: 15px;
                text-decoration: none;
            }

            /* adding in hover design - changes to orange when the user hovers over each navigation item*/
                .navbar-nav .nav-item .nav-link:hover {
                    color: yellow !important;
                    text-decoration: none;
                }

        /* General body settings */+
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100vh;
            overflow-x: hidden;
        }
    </style>
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-navbar">
            <!-- changing colour of navigation bar-->
            <div class="container-fluid">

                <!--adding in logo image to make the website look more professional-->
                <img src="/css/AGRI_ENERGY_CONNECT_LOGO.png" alt="AGRI ENERGY CONNECT LOGO" width="295" height="72" style="margin-left: 40px; margin-top: 15px;" />

                <a class="nav-link nav bar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                @{
                    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
                }

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                        {
                            /* which pages to show for farmer */
                            if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Farmer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ManageFarmerProducts"asp-route-userId="@userId">
                                        Manage My Products
                                    </a>
                                </li>
                            }

                            else if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Employee")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ManageFarmerDetails">Manage Farmers</a>
                                </li>
                            }

                            <li class="nav-item">
                                <span class="nav-link">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</span> <!-- Display user name -->
                            </li>
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Logout" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link">Log Out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Log In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" style="flex: 1;">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted" style="background-color: white;">
        <div class="container">
            &copy; 2025 - Agri-Energy Connect, South Africa -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>